<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="1dp">

        <LinearLayout
            android:id="@+id/layoutInspectionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8left"
                android:layout_marginRight="@dimen/margin_8right"
                android:layout_marginTop="@dimen/margin_8top"
                android:background="@android:color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8bottom"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/layoutDueDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <!--android:layout_marginTop="6dp"-->

                                    <TextView
                                        android:id="@+id/txtDateLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Date"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/text_small_10" />

                                    <TextView
                                        android:id="@+id/txtDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_8left"
                                        android:text="04 Nov 2017"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="@dimen/text_normal_12" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp">

                                    <TextView
                                        android:id="@+id/inspectionActivity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="FINAL Inspection "
                                        android:textColor="@color/colorBlack"
                                        android:textSize="18sp" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <CheckBox
                                    android:id="@+id/chkToSync"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To Sync"
                                    android:textSize="@dimen/text_small_10"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height=".5dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/divider_under_line"></LinearLayout>


                        <LinearLayout
                            android:id="@+id/inspectionDetailContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_8bottom"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--android:layout_marginTop="6dp"-->

                                <TextView
                                    android:id="@+id/txtIDLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="ID"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text="DEL66766"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right">

                                    <ImageView
                                        android:id="@+id/iconImportant"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="right"
                                        android:paddingLeft="12dp"
                                        android:paddingRight="8dp"
                                         />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutCustomer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--android:layout_marginTop="6dp"-->

                                <TextView
                                    android:id="@+id/txtCustomerLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Customer"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtCustomer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text="Winda "
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutPO"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--android:layout_marginTop="6dp"-->

                                <TextView
                                    android:id="@+id/txtPONOLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="PO No"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtPONO"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text=" "
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/layoutItemId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--android:layout_marginTop="6dp"-->

                                <TextView
                                    android:id="@+id/txtItemIdLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Style No."
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <!--<TextView
                                    android:id="@+id/txtItemId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text="jbjsjk,jksjkkj,jddhdhd, hdhdhd, dhdhdh,hdhdhdh, hdhdhddh "
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >

                                    <TextView
                                        android:id="@+id/txtItemId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentTop="true"
                                        android:maxLines="1"
                                        android:text=" "
                                        android:textColor="@color/text_secondary"
                                        android:textSize="@dimen/text_normal_12"
                                        android:layout_marginRight="30dp"
                                        android:layout_marginLeft="@dimen/margin_8left"
                                        android:maxLength="50"
                                        android:ellipsize="end"/>

                                    <TextView
                                        android:id="@+id/tvMore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/txtItemId"
                                        android:layout_alignParentRight="true"
                                        android:text="More"
                                        android:visibility="gone"
                                        android:textColor="@color/colorPrimary" />
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--android:layout_marginTop="6dp"-->

                                <TextView
                                    android:id="@+id/txtVendorLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Vendor"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtVendor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text="A R Printing and Packaging India Pvt. Ltd. "
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--android:layout_marginTop="6dp"-->

                                <TextView
                                    android:id="@+id/txtVendorContactLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Vendor Contact"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtVendorContact"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text="ap singh"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--android:layout_marginTop="6dp"-->

                                <TextView
                                    android:id="@+id/txtVendorAddressLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Vendor Address"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtVendorAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text="ap singh"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/layoutQR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--android:layout_marginTop="6dp"-->

                                <TextView
                                    android:id="@+id/txtQRLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="QR"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtQR"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text="328972389"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutInspector"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--android:layout_marginTop="6dp"-->

                                <TextView
                                    android:id="@+id/txtInspectorLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Inspector"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtInspector"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text="phhhh"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/statusLabel"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Status"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_small_10"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_8left"
                                    android:text=""
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_normal_12" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

