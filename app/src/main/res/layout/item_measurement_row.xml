<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconDeleteWorkmanship"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_delete_black_24dp"
            app:tint="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="12dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtItemLength"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="5"
                    android:textColor="@color/text_primary_back"
                    android:textSize="@dimen/text_normal_12" />

                <LinearLayout
                    android:layout_width=".5dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_under_line"></LinearLayout>

                <TextView
                    android:id="@+id/txtItemHeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:padding="5dp"
                    android:text="5"
                    android:textColor="@color/text_primary_back"
                    android:textSize="@dimen/text_normal_12" />

                <LinearLayout
                    android:layout_width=".5dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_under_line"></LinearLayout>

                <TextView
                    android:id="@+id/txtItemWidth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="5"
                    android:textColor="@color/text_primary_back"
                    android:textSize="@dimen/text_normal_12" />

                <LinearLayout
                    android:layout_width=".5dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_under_line"></LinearLayout>

                <TextView
                    android:id="@+id/txtItemSampleSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/text_primary_back"
                    android:textSize="@dimen/text_normal_12" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width=".5dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_under_line"></LinearLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/txtFinding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    app:tint="@color/colorTeal"
                    android:src="@drawable/ic_update_black_24dp"

                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_marginTop="5dp"
                android:background="@color/divider_under_line"></LinearLayout>

            <LinearLayout
                android:id="@+id/toleranceRangeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toleranceRangeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Tolerance Range"
                    android:textColor="@color/colorTeal"
                    android:textSize="@dimen/text_small_10"></TextView>

                <EditText
                    android:id="@+id/toleranceRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jioio"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_small_10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/descriptionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/descriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Description"
                    android:textColor="@color/colorTeal"
                    android:textSize="@dimen/text_small_10"></TextView>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jioio"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_small_10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachmentCountContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="right|center_vertical"
                >

                <TextView
                    android:id="@+id/attachmentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text=""
                    android:textColor="@color/colorTeal"
                    android:textSize="@dimen/text_normal_14" />

                <ImageView
                    android:id="@+id/attachmentImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_photo_camera"
                    app:tint="@color/colorTeal" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>