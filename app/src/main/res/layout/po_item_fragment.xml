<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/qualityMainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/qualityPo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text=" PO "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal_12" />

            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_under_line"></View>

            <TextView
                android:id="@+id/qualityItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="Item"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal_12" />

            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_under_line"></View>

            <TextView
                android:id="@+id/qualityOrderLabel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"

                android:text="Order"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal_12" />

            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_under_line"></View>

            <TextView
                android:id="@+id/qualityInspectedTillDateLabel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center"

                android:padding="5dp"
                android:text="Inspected Till Date"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal_12" />


            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_under_line"></View>

            <TextView
                android:id="@+id/qualityAvailableLabel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center"

                android:padding="5dp"
                android:text="Available"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal_12" />


            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_under_line"></View>

            <TextView
                android:id="@+id/qualityAcceptedLabel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center"
                android:padding="5dp"
                android:text="Accepted"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal_12" />


            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_under_line"></View>

            <TextView
                android:id="@+id/qualityShortLabel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"
                android:padding="5dp"
                android:text="Short"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal_12" />


            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_under_line"></View>

            <TextView
                android:id="@+id/qualityInspectLaterLabel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"

                android:padding="5dp"
                android:text="Inspect Later"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal_12" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/divider_under_line"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.util.NonscrollRecylerview
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:scrollbars="vertical" />

            <LinearLayout
                android:id="@+id/dividerTotalTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/qualityTotalContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Total"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12" />


                    <TextView
                        android:id="@+id/qualityItemI"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:visibility="invisible" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"></View>

                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"
                        android:visibility="visible"></View>


                    <TextView
                        android:id="@+id/qualityTotalOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="5dp"
                        android:text="77"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:textStyle="bold" />


                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"
                        android:visibility="invisible"></View>

                    <TextView
                        android:id="@+id/qualityInspectedTillDateLabel1I"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"

                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:visibility="invisible" />


                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"></View>

                    <TextView
                        android:id="@+id/totalQualityAvailable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="67"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:textStyle="bold" />


                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"></View>

                    <TextView
                        android:id="@+id/totalQualityAccepted"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="76"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:textStyle="bold" />


                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"
                        android:visibility="gone"></View>

                    <TextView
                        android:id="@+id/totalQualityShort"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="76"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:visibility="invisible" />

                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"
                        android:visibility="gone"></View>


                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"
                        android:visibility="gone"></View>

                    <TextView
                        android:id="@+id/qualityInspectLaterLabel1I"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="5dp"

                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:visibility="invisible" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/dividerBottomTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
