<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/cartonMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/cartonPo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text=" PO "
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/cartonItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Item"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/CartonLabel1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Packed"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />


        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/AvalableLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Available"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/InspectedLabel1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="To Inspected"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/divider_under_line"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.util.NonscrollRecylerview
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:scrollbars="vertical" />

            <LinearLayout
                android:id="@+id/dividerTotalTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/cartonTotalContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/cartonTotalTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Total"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12" />

                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"></View>

                    <TextView
                        android:id="@+id/cartonItemI"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Item"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:visibility="invisible" />

                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"></View>

                    <TextView
                        android:id="@+id/CartonTotalPacked"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="6"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:textStyle="bold" />


                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"></View>

                    <TextView
                        android:id="@+id/cartonTotalAvalable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:textStyle="bold" />

                    <View
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"></View>

                    <TextView
                        android:id="@+id/cartonTotalInspected"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="8"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_normal_12"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dividerBottomTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>