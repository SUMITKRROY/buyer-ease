<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/workmanshipMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/workPo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text=" PO "
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Item"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanshipToInspectionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="To Inspection"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanshipInspectedLabel1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Inspected"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />


        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanshipCriticalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Critical"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanshipMajorLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Major"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanshipMinorLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Minor"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/divider_under_line"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scrollbars="vertical" />

        <LinearLayout
            android:id="@+id/dividerTotalTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/workmanshipTotalContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/topContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="Total"
                        android:textColor="@color/text_primary_back"
                        android:textSize="@dimen/text_normal_12" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:gravity="center"

                        android:textColor="@color/text_primary_back"
                        android:textSize="@dimen/text_normal_12"
                        android:visibility="invisible" />


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:gravity="center"

                        android:textColor="@color/text_primary_back"
                        android:textSize="@dimen/text_normal_12"
                        android:visibility="invisible" />


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:gravity="center"

                        android:textColor="@color/text_primary_back"
                        android:textSize="@dimen/text_normal_12"
                        android:visibility="invisible" />


                    <LinearLayout
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"></LinearLayout>

                    <TextView
                        android:id="@+id/txtTotalCritical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5"

                        android:textColor="@color/text_primary_back"
                        android:textSize="@dimen/text_normal_12"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"></LinearLayout>

                    <TextView
                        android:id="@+id/txtTotalMajor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/text_primary_back"
                        android:textSize="@dimen/text_normal_12"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width=".5dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider_under_line"></LinearLayout>

                    <TextView
                        android:id="@+id/txtTotalMinor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/text_primary_back"
                        android:textSize="@dimen/text_normal_12"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dividerBottomTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout></ScrollView>
</LinearLayout>