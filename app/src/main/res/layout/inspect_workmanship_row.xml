<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/workmanshipMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/workPo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text=" PO "
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Item"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanshipToInspectionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="To Inspection"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

       <!-- <TextView
            android:id="@+id/workmanshipInspectedLabel1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Inspected"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />
-->
        <EditText
            android:id="@+id/workmanshipInspectedLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:backgroundTint="@android:color/transparent"
            android:padding="5dp"
            android:text="Inspected"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanshipCriticalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Critical"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanshipMajorLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Major"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />

        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_under_line"></View>

        <TextView
            android:id="@+id/workmanshipMinorLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Minor"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_normal_12" />


    </LinearLayout>


</LinearLayout>
