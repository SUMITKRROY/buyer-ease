<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="title"
                    android:textColor="@color/text_primary_back"
                    android:textSize="@dimen/text_normal_12" />

                <LinearLayout
                    android:layout_width=".5dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_under_line"
                    android:visibility="gone"></LinearLayout>

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""

                    android:textColor="@color/text_primary_back"
                    android:textSize="@dimen/text_normal_12"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width=".5dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_12right"
                    android:background="@color/divider_under_line"></LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp">

                    <ImageView
                        android:id="@+id/attachmentImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/default_image_large" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/ic_delete_black_24dp"
                    app:tint="@color/red" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomDivider"
            android:layout_width="match_parent"
            android:layout_height=".7dp"
            android:background="@color/colorBlack"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>
</LinearLayout>