                            android:id="@+id/txtPalletPackingBarcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pallet Packing"
                            android:textColor="@color/colorTeal"
                            android:textSize="@dimen/text_normal_12"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerSampleSizePalletPackingBarcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_small_10" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="Specification"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="Visual"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txtSpecificationLabelPalletPackingBarcode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/edit_background"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/txtVisulLabelPalletPackingBarcode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/edit_background"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="normal" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:text="Scan"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="Over All Result"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <EditText
                                android:id="@+id/txtScanLabelPalletPackingBarcode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.8"
                                android:background="@drawable/edit_background"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="normal" />

                            <Spinner
                                android:id="@+id/txtResultSpinnerPalletPackingBarcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.2"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/palletBarcodeAttachmentCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="12dp"
                                android:paddingTop="5dp"
                                android:textColor="@color/colorTeal"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/palletBarcodeImagePicker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:src="@drawable/ic_photo_camera" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:id="@+id/packingRemarkContainerBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_normal_14" />

                <EditText
                    android:id="@+id/editPackingBarcodeRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_background"
                    android:gravity="top"
                    android:minLines="5"
                    android:textSize="@dimen/text_normal_12" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>