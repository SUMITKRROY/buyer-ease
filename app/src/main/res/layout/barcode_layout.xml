                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/txtVisulLabelInnerPackingBarcode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/edit_background"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="normal" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:text="Scan"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="Over All Result"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <EditText
                                android:id="@+id/txtScanLabelInnerPackingBarcode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.8"
                                android:background="@drawable/edit_background"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10"
                                android:textStyle="normal" />

                            <Spinner
                                android:id="@+id/txtResultSpinnerInnerPackingBarcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.2"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_small_10" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/innerBarcodeAttachmentCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="12dp"
                                android:paddingTop="5dp"
                                android:textColor="@color/colorTeal"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/innerBarcodeImagePicker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:src="@drawable/ic_photo_camera" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
